			</Grid.RowDefinitions>
			<Button Grid.Row="0" Grid.Column="0" Content="" Height="30" Width="150" Margin="10" Background="White">
				<Image Source="C:\Users\cleme\OneDrive\Bureau\Pro4\Ridren51\ProjC\EasySave\EasySave_WPF\Content\Logo.png" Height="30" />
			</Button>
			<Button Grid.Row="0" Grid.Column="2" Content=""	Width="30" Height="30" Margin="10">
