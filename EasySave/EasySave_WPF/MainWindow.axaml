	</Window.Styles>
	<Window.MinWidth>600</Window.MinWidth>
	<Window.MinHeight>400</Window.MinHeight>
	<Window.Background>#2c2f33</Window.Background>
<Grid RowDefinitions="Auto,Auto">
	<Grid Grid.Row="0" VerticalAlignment="Top" RowDefinitions="Auto,Auto" ColumnDefinitions="*">
