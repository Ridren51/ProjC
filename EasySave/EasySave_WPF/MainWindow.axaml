	<Grid Grid.Row="1">
		<Border  CornerRadius="10" BorderBrush="White">
			<TabControl TabStripPlacement="Left" Margin="10" CornerRadius="10">
				<TabItem  Background="#99aab5" Header="▶️ Backups" CornerRadius="10">
					<Grid Background="#99aab5">
						
					</Grid>
				</TabItem>
				<TabItem Background="#99aab5" Header="📋 Backups" CornerRadius="10">
					<Grid Background="#99aab5" VerticalAlignment="Top" HorizontalAlignment="Left">
						<Menu DockPanel.Dock="Top">
							<MenuItem Header="New">
								<MenuItem Header="Full">
									<TextBlock>Name :</TextBlock>
									<TextBox Name="BackupName"></TextBox>
